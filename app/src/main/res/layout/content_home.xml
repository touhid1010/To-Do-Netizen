    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:background="#2F3192"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="You need to add new Institution."
                android:textSize="18sp" />

            <ScrollView
                android:id="@+id/scrollView_home_main_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:minWidth="200dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Space
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight=".6"
                            android:layout_height="wrap_content">

                            <Spinner
                                android:id="@+id/spinner_instituteName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:background="#aebae1"
                                android:gravity="center"
                                android:minHeight="20dp"
                                android:minWidth="200dp"
                                android:padding="12dp" />

                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <Space
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_weight=".6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/button_showTask"
                                style="@style/MyMaterialButton"
                                android:layout_width="0dp"
                                android:layout_weight=".5"
                                android:layout_height="wrap_content"
                                android:text="Task"
                                android:textColor="@android:color/white" />

                            <Button
                                android:id="@+id/button_instDetails"
                                style="@style/MyMaterialButton"
                                android:layout_weight=".5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Details"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <Space
                            android:layout_width="0dp"
                            android:layout_weight=".2"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center"
            android:background="#7D7EC4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView_followupListTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#d2d2d2"
                android:padding="10dp"
                android:text="Today's Followup Time"
                android:textSize="18sp" />

            <ScrollView
                android:id="@+id/scrollView_table"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:id="@+id/tableLayout_todaysFollowupList"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                        <!--Make dynamic table from java-->

                    </TableLayout>

                </LinearLayout>


            </ScrollView>





        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_newInstitution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/ic_action_add_institute"
        app:backgroundTint="@color/colorPrimary"
        app:layout_anchor="@id/viewA"
        app:layout_anchorGravity="bottom|right|end" />

</android.support.design.widget.CoordinatorLayout>

