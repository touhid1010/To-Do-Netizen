<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@color/colorBackgroundMain"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.netizenbd.todonetizen.ViewTaskList"
    tools:showIn="@layout/activity_view_task_list">

    <TextView
        android:id="@+id/textView_viewTask"
        android:text="Institute Name"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:padding="15dp"
        android:background="@color/colorBackgroundTitle"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--if no data then it will show-->

    <TextView
        android:id="@+id/textView_empty_task_message"
        android:text="You don't have any task for this institution!\nPlease add task from the below button."
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#8b8b8b"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:id="@+id/tableLayout_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <!--Make dynamic table from java-->

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
